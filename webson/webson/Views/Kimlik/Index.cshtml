@model IEnumerable<webson.Models.Kimlik>

@{
    ViewBag.Title = "Site Kimlik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Kimlik Ekle", "Create")
</p>
<table class="table text-center table-responsive">
    <tr>
        <th>
            Site Başlık
        </th>
        <th>
           Anahtar Kelimeler
        </th>
        <th>
            Site Açıklama
        </th>
        <th>
            Site Logo
        </th>
        <th>
            Site Ünvan
        </th>
        <th>
            İşlemler
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Keywords)
        </td>
        <td>
            @Html.Raw(item.Description)
        </td>
        <td>
            <img src="@item.LogoURL" class="img-responsive" width="50" height="50"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unvan)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.KimlikId })
        
        </td>
    </tr>
}

</table>
