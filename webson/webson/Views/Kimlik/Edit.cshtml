@model webson.Models.Kimlik

@{
    ViewBag.Title = "Kimlik Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('Editör')
</script>

<h2>Düzenle</h2>

@using (Html.BeginForm("Edit","Kimlik", FormMethod.Post, new {enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.KimlikId)

    <div class="form-group">
        Site Başlık
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Anahtar Kelimeler
        <div class="col-md-10">
            @Html.EditorFor(model => model.Keywords, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Keywords, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Site Açıklama
        <div class="col-md-10">
            <textarea name="Description" class="ckeditor">
            @Model.Description 
            </textarea>

        </div>
    </div>
    
    <div class="form-group">
        Eski Logo
        <div class="col-md-10">
           <img src="@Model.LogoURL" width="300" height="300" />
        </div>
    </div>

    <div class="form-group">
        Logo
        <div class="col-md-10">
            <input type="file" name="LogoURL" accept=".png,.jpg,.jpeg" class="form-control" />
            @Html.ValidationMessageFor(model => model.LogoURL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ünvan
        <div class="col-md-10">
            @Html.EditorFor(model => model.Unvan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Unvan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-2">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Güncelle" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div class="mt-2">
    <a href="@Url.Action("Index")" class="btn btn-primary">Geri Dön</a>
</div>
