@model IEnumerable<webson.Models.Blog>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>

<h2>Blog Kayıtları</h2>

<table class="table table-striped text-center" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Kategori</th>
            <th scope="col">Resim</th>
            <th scope="col">İşlemler</th>
            <th><a class="btn btn-success" href="/Blog/Create">Ekle</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.BlogId</th>
                <td>@item.Baslik</td>
                <td>@item.Kategori.KategoriAd</td>
                <td><img src="@item.ResimURL" width="100" height="100" /></td>
                <td><a href="/Blog/Edit/@item.BlogId" class="btn btn-warning">Güncelle</a> | <a href="/Blog/Delete/@item.BlogId" class="btn btn-danger">Sil</a></td>
            </tr>

        }

    </tbody>
</table>


