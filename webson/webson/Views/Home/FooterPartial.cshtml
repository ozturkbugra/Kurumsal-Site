@{
    string tarih = DateTime.Now.ToString("yyyy");
}
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Kurumsal Web Sitesi</h5>
                    <address>
                        <i class="bi bi-geo-alt-fill"></i> @ViewBag.Iletisim.Adres
                    </address>
                    <p>
                        <i class="bi bi-telephone-fill"></i> @ViewBag.Iletisim.Tel <br />
                        <i class="bi bi-whatsapp"></i>  @ViewBag.Iletisim.Whatsapp <br />
                        <i class="bi bi-facebook"></i> @ViewBag.Iletisim.Facebook <br />
                        <i class="bi bi-twitter"></i> @ViewBag.Iletisim.Twitter  <br />
                        <i class="bi bi-instagram"></i> @ViewBag.Iletisim.Instagram

                    </p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Sayfalar</h5>
                    <ul class="link-list">
                        <li><a href="/Home">Ana Sayfa</a></li>
                        <li><a href="/Home/Hakkimizda">Hakkımızda</a></li>
                        <li><a href="/Home/Hizmetlerimiz">Hizmetlerimiz</a></li>
                        <li><a href="/Home/Blog">Blog</a></li>
                        <li><a href="/Home/Iletisim">İletişim</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Son Blog yazıları</h5>
                    <ul class="link-list">
                        @foreach (var item in ViewBag.Blog)
                        {
                            <li><a href="/Home/BlogDetay/@item.BlogId">@item.Baslik</a></li>
                        }

                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Hizmetlerimiz</h5>
                    <div class="flickr_badge">
                        @foreach (var item in ViewBag.Hizmetler)
                        {
                            <a href="/Home/Hizmetlerimiz/@item.HizmetId"><img src="@item.ResimURL" width="160" height="40" /></a>

                        }

                    </div>
                    <div class="clear">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="sub-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="copyright">
                        <p>&copy; @tarih Kurumsal Web Tüm hakları saklıdır.</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ul class="social-network">
                        <li><a href="https://www.facebook.com/@ViewBag.Iletisim.Facebook" data-placement="top" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="https://www.Twitter.com/@ViewBag.Iletisim.Twitter" data-placement="top" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="https://www.instagram.com/@ViewBag.Iletisim.Instagram" data-placement="top" title="Linkedin"><i class="fa fa-instagram"></i></a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
