@model webson.Models.Slider

@{
    ViewBag.Title = "Slider Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Slider</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Slider Başlık
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Baslik)
        </dd>

        <dt>
            Slider Açıklama
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Aciklama)
        </dd>

        <dt>
           Slider resim
        </dt>

        <dd>
            <img src="@Model.ResimURL" width="1024" height="360" class="form-control" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Güncelle", "Edit", new { id = Model.SliderId }) |
    @Html.ActionLink("Geri Dön", "Index")
</p>
