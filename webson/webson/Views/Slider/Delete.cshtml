@model webson.Models.Slider

@{
    ViewBag.Title = "Slider Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Silmek istediğinizden emin misiniz?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Slider Başlık
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Baslik)
        </dd>

        <dt>
            Slider Açıklama
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Aciklama)
        </dd>

        <dt>
            Slider Resim
        </dt>

        <dd>
            <img src="@Model.ResimURL" width="512" height="180" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-3">
            <button type="submit" class="btn btn-danger">Sil</button>
        |
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>
