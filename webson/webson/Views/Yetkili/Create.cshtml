@model webson.Models.Admin

@{
    ViewBag.Title = "Yetkili Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yetkili Ekle</h2>

@using (Html.BeginForm("Create", "Yetkili", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           E-posta
            <div class="col-md-10">
                <input name="Eposta" type="email" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
           Şifre
            <div class="col-md-10">
                <input name="Sifre" type="password" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            Yetki
            <div class="col-md-10">
                <select id="userRole" name="Yetki" class="form-select">
                    <option value="Editor">Editör</option>
                    <option value="Admin">Admin</option>
                </select>

            </div>
        </div>

        <div class="form-group">
           Resim
            <div class="col-md-10">
                <input name="ResimURL" type="file" accept=".png,.jpg,.jpeg" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-3">
                <button type="submit" class="btn btn-success">Ekle </button>
                
            </div>
        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Geri Dön", "Index")
</div>
