@model webson.Models.Admin

@{
    ViewBag.Title = "Yetkili Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Silmek istediğinizden emin misiniz?</h3>
<div>
    
    <dl class="dl-horizontal">

        <dt>
            Resim
        </dt>

        <dd>
            <img src="@Model.ResimURL" width="200" height="200" />
        </dd>

        <dt>
            E-Posta
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Eposta)
        </dd>

        <dt>
            Şifre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sifre)
        </dd>

        <dt>
            Yetki
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Yetki)
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions mt-3">
            <button type="submit" class="btn btn-success"> Sil </button> |
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>
